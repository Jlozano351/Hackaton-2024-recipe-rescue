name: Python CI

on:
  push:
    branches:
      - main  # Adjust this to your default branch name

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: 3.8

    - name: Install Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt  # Add this if you have a requirements.txt file

    - name: Lint Code
      run: |
        pip install flake8
        flake8 your_script.py

    - name: Run Tests
      run: |
        python your_script.py  # Replace with the actual name of your script

